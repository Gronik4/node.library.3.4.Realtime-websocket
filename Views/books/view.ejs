<%- include('../port/header', {title: title}) %>
<%-include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-8">
      <div class="card">
          <div class="card-body">
            
            <p class="card-text">id: <%= book.id %></p>
              <% fields.map ((el, idx)=> { %>
                <p class="card-text"><%= names[idx]%>: <%= book[el]%></p>
              <% }) %>

              <div class="text-right">
                  <a class="btn btn-sm btn-primary" href="/book/update/<%= book.id %>">
                      <i class="fa fa-pencil" aria-hidden="true"></i>
                  </a>
              </div>
          </div>
      </div>
      <%-include('discuss', {titleBook: book.title}) %>
  </div>
</div>

<%-include('../port/footer') %>
