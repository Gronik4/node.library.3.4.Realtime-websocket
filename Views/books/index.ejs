<%-include('../port/header', {title: title, book:book}) %>
<%-include('../port/menu') %>

  <h1><%= title %></h1>
  <a class="btn btn-sm btn-primary" href="/book/create/">Добавить запись</a>

<% if(book.length) { %>
  
  <table class="table table-striped table-sm  mt-3">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Заголовок</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>

        <% book.map((el, idx) => {  %>
            <tr>
                <th scope="row"><%= idx +1 %></th>
                <td><%= el.title %></td>
                <td class="text-right">
                    <a class="btn btn-sm btn-success" href="/book/<%= el.id %>">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-sm btn-primary" href="/book/update/<%= el.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        <% }) %>

    </tbody>
</table>

<% } else {%>
  <h3 class="mt-5">Книг пока нет...</h3>
<% } %>

<%-include('../port/footer') %>
